<FilesMatch "\.(php|phtml|php5|phar)$">
  Require all denied
</FilesMatch>
php_flag engine off
Options -Indexes

<FilesMatch "\.(php|phar|phtml|shtml|cgi|pl)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Deny from all
  </IfModule>
</FilesMatch>

